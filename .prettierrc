{
  "overrides": [
    {
      "files": "./contract/**/*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": "./**/*.ts",
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "trailingComma": "all",
        "singleQuote": false,
        "semi": true
      }
    }
  ]
}
